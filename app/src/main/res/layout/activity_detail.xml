<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="2dp"
        android:layout_marginBottom="10dp"
        android:background = "@drawable/navigasi_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_pinterest"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinterest"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#E41117"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/img_imageDetail"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/txt_titleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titel"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/txt_descriptionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_pin_detail_1"
            android:layout_width="83dp"
            android:layout_height="83dp" />

        <ImageView
            android:id="@+id/image_pin_detail_2"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="19dp"/>

        <ImageView
            android:id="@+id/image_pin_detail_3"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginLeft="19dp"/>

    </LinearLayout>

</LinearLayout>